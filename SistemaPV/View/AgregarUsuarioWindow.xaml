<Window x:Class="SistemaPV.View.AgregarUsuarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Nuevo Usuario" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition x:Name="rowPassword" Height="Auto"/>
            <RowDefinition x:Name="rowPasswordConfirm" Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Nombre:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Content="Apellido Paterno:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtAPaterno" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <Label Content="Apellido Materno:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtAMaterno" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <Label Content="Rol de Usuario:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <ComboBox x:Name="cmbRol" Grid.Row="3" Grid.Column="1" Margin="5"/>
        <Separator Grid.Row="4" Grid.ColumnSpan="2" Margin="0,10"/>


        <Label Content="Nombre de Usuario:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtNombreUsuario" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <Label x:Name="lblPassword" Content="Contraseña:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="6" Grid.Column="1" Margin="5"/>

        <Label x:Name="lblPasswordConfirm" Content="Confirmar Contraseña:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <PasswordBox x:Name="txtPasswordConfirm" Grid.Row="7" Grid.Column="1" Margin="5"/>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnGuardar" Content="Guardar" Width="80" Margin="5" Padding="5" Click="BtnGuardar_Click" IsDefault="True"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="80" Margin="5" Padding="5" Click="BtnCancelar_Click" IsCancel="True"/>
        </StackPanel>
        
        

    </Grid>
</Window>