<Window x:Class="SistemaPV.View.Inventario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaPV.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Inventario" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowLoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FFEAEAEA" Margin="5">
            <Label Content="SISTEMA: PUNTO DE VENTA" FontWeight="Bold" Margin="5"/>
            <Label Content="Usuario : Administrador" FontWeight="Bold" Margin="5,0,5,0"/>

            <RadioButton Content="Inventario" IsChecked="True" GroupName="Navegacion" Margin="10,5"
                         Command="{Binding ShowInventarioCommand}"/>
            <RadioButton Content="Administrar Usuarios" GroupName="Navegacion" Margin="10,5"
                         Command="{Binding ShowUsuariosCommand}"/>

            <Button Content="Cerrar sesión" VerticalAlignment="Bottom" Margin="10" Padding="5"
                    Command="{Binding CerrarSesionCommand}"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Background="#FF4A4AFF" Margin="5"
                    Visibility="{Binding PanelBotonesProductosVisibility}">
            <Button Content="Agregar Producto" Margin="10" Padding="10" 
                    Command="{Binding AgregarProductoCommand}"/>
            <Button Content="Eliminar Producto" Margin="10" Padding="10" 
                    Command="{Binding EliminarProductoCommand}"/>
            <Button Content="Editar Producto" Margin="10" Padding="10" 
                    Command="{Binding EditarProductoCommand}"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Background="#FF4A4AFF" Margin="5"
                    Visibility="{Binding PanelBotonesUsuariosVisibility}">
            <Button Content="Agregar Usuario" Margin="10" Padding="10" 
                    Command="{Binding AgregarUsuarioCommand}"/>
            <Button Content="Eliminar Usuario" Margin="10" Padding="10" 
                    Command="{Binding EliminarUsuarioCommand}"/>
            <Button Content="Editar Usuario" Margin="10" Padding="10" 
                    Command="{Binding EditarUsuarioCommand}"/>
        </StackPanel>

        <DataGrid Grid.Column="1" Margin="5,5,195,5" Grid.ColumnSpan="2"
                  ItemsSource="{Binding Productos}"
                  SelectedItem="{Binding SelectedProducto}"
                  Visibility="{Binding InventarioVisibility}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_PRODUCTO}" Width="100"/>
                <DataGridTextColumn Header="NOMBRE" Binding="{Binding NOMBRE_PRODUCTO}" Width="*"/>
                <DataGridTextColumn Header="PRECIO" Binding="{Binding PRECIO, StringFormat=c}" Width="100"/>
                <DataGridTextColumn Header="STOCK" Binding="{Binding CANTIDAD_STOCK}" Width="80"/>
                <DataGridTextColumn Header="DESCRIPCIÓN" Binding="{Binding DESCRIPCION}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Column="1" Margin="5"
                  ItemsSource="{Binding Usuarios}"
                  SelectedItem="{Binding SelectedUsuario}"
                  Visibility="{Binding UsuariosVisibility}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_USUARIO}" Width="50"/>
                <DataGridTextColumn Header="USUARIO" Binding="{Binding NOMBRE_USUARIO}" Width="*"/>
                <DataGridTextColumn Header="ROL" Binding="{Binding NOMBRE_ROL}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>