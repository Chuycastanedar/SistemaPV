<Window x:Class="SistemaPV.View.Inventario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaPV.View"
        mc:Ignorable="d"
        Title="Inventario" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FFEAEAEA" Margin="5">
            <Label Content="SISTEMA: PUNTO DE VENTA" FontWeight="Bold" Margin="5"/>
            <Label Content="Usuario : Administrador" FontWeight="Bold" Margin="5,0,5,0"/>
            

            <RadioButton Content="Inventario" IsChecked="True" GroupName="Navegacion" Margin="10,5"
                         Checked="RbInventario_Checked"/>
            <RadioButton Content="Administrar Usuarios" GroupName="Navegacion" Margin="10,5"
                         Checked="RbUsuarios_Checked"/>

            <Button Content="Cerrar sesión" VerticalAlignment="Bottom" Margin="10" Padding="5"
                    Click="BtnCerrarSesion_Click"/>
        </StackPanel>

        <StackPanel x:Name="panelBotonesProductos" Grid.Column="2" Background="#FF4A4AFF" Margin="5">
            <Button x:Name="btnAgregar" Content="Agregar Producto" Margin="10" Padding="10" Click="BtnAgregar_Click"/>
            <Button x:Name="btnEliminar" Content="Eliminar Producto" Margin="10" Padding="10" Click="BtnEliminar_Click"/>
            <Button x:Name="btnEditar" Content="Editar Producto" Margin="10" Padding="10" Click="BtnEditar_Click"/>
        </StackPanel>

        <StackPanel x:Name="panelBotonesUsuarios" Grid.Column="2" Background="#FF4A4AFF" Margin="5"
                    Visibility="Collapsed">
            <Button x:Name="btnAgregarUsuario" Content="Agregar Usuario" Margin="10" Padding="10" Click="BtnAgregarUsuario_Click"/>
            <Button x:Name="btnEliminarUsuario" Content="Eliminar Usuario" Margin="10" Padding="10" Click="BtnEliminarUsuario_Click"/>
            <Button x:Name="btnEditarUsuario" Content="Editar Usuario" Margin="10" Padding="10" Click="BtnEditarUsuario_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgvInventario" Grid.Column="1" Margin="5,5,195,5"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_PRODUCTO}" Width="100"/>
                <DataGridTextColumn Header="NOMBRE" Binding="{Binding NOMBRE_PRODUCTO}" Width="*"/>
                <DataGridTextColumn Header="PRECIO" Binding="{Binding PRECIO, StringFormat=c}" Width="100"/>
                <DataGridTextColumn Header="STOCK" Binding="{Binding CANTIDAD_STOCK}" Width="80"/>
                <DataGridTextColumn Header="DESCRIPCIÓN" Binding="{Binding DESCRIPCION}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="dgvUsuarios" Grid.Column="1" Margin="5"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single"
                  Visibility="Collapsed">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_USUARIO}" Width="50"/>
                <DataGridTextColumn Header="USUARIO" Binding="{Binding NOMBRE_USUARIO}" Width="*"/>
                <DataGridTextColumn Header="ROL" Binding="{Binding NOMBRE_ROL}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>