<Window x:Class="SistemaPV.View.Inventario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaPV.View"
        mc:Ignorable="d"
        Title="Inventario" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FFEAEAEA" Margin="5">
            <Label Content="SISTEMA: PUNTO DE VENTA" FontWeight="Bold" Margin="5"/>
            <Label Content="Usuario: admin" Margin="5,0,5,0"/>
            <Label Content="Administrador" FontWeight="Bold" Margin="5,0,5,20"/>

            <RadioButton Content="Inventario" IsChecked="True" GroupName="Navegacion" Margin="10,5"
             Checked="RbInventario_Checked"/>
            <RadioButton Content="Administrar Usuarios" GroupName="Navegacion" Margin="10,5"
             Checked="RbUsuarios_Checked"/>

            <Button Content="Cerrar sesión" VerticalAlignment="Bottom" Margin="10" Padding="5"/>
        </StackPanel>

        <StackPanel x:Name="panelBotonesProductos" Grid.Column="2" Background="#FF4A4AFF" Margin="5">
            <Button x:Name="btnAgregar" Content="Agregar Producto" Margin="10" Padding="10" Click="BtnAgregar_Click"/>
            <Button x:Name="btnEliminar" Content="Eliminar Producto" Margin="10" Padding="10" Click="BtnEliminar_Click"/>
            <Button x:Name="btnEditar" Content="Editar Producto" Margin="10" Padding="10" Click="BtnEditar_Click"/>
        </StackPanel>
        <StackPanel x:Name="panelBotonesUsuarios" Grid.Column="2" Background="#FF4A4AFF" Margin="5"
            Visibility="Collapsed">
            <Button x:Name="btnAgregarUsuario" Content="Agregar Usuario" Margin="10" Padding="10"/>
            <Button x:Name="btnEliminarUsuario" Content="Eliminar Usuario" Margin="10" Padding="10"/>
            <Button x:Name="btnEditarUsuario" Content="Editar Usuario" Margin="10" Padding="10"/>
        </StackPanel>

        <DataGrid x:Name="dgvInventario" Grid.Column="1" Margin="5,5,0,5"
              AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IDENTIFICADOR" Binding="{Binding Identificador}" Width="100"/>
                <DataGridTextColumn Header="NOMBRE" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="PRECIO" Binding="{Binding Precio, StringFormat=c}" Width="100"/>
                <DataGridTextColumn Header="STOCK" Binding="{Binding Stock}" Width="80"/>
                <DataGridTextColumn Header="DESCRIPCIÓN" Binding="{Binding Descripcion}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="dgvUsuarios" Grid.Column="1" Margin="5"
          AutoGenerateColumns="False" IsReadOnly="True"
          SelectionMode="Single"
          Visibility="Collapsed">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="USUARIO" Binding="{Binding NombreUsuario}" Width="*"/>
                <DataGridTextColumn Header="ROL" Binding="{Binding Rol}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
